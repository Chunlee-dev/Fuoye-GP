<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/topmost1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_bg"
                        android:elevation="2dp"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <TextView
                            android:id="@+id/font_tv1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="First semester GP"
                            android:textColor="@color/toolbar_color"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0.7dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="0"
                            android:background="@android:color/black" />

                        <EditText
                            android:id="@+id/first_smst_gp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:alpha="0.5"
                            android:background="#FAF4F4"
                            android:hint="5.0"
                            android:inputType="numberDecimal"
                            android:maxWidth="56dp"
                            android:maxHeight="48dp"
                            android:maxEms="3"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:padding="12dp"
                            android:textColorHint="@color/toolbar_color"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_bg"
                        android:elevation="2dp"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="First semester total unit"
                            android:textColor="@color/toolbar_color"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0.7dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="0"
                            android:background="@android:color/black" />

                        <EditText
                            android:id="@+id/first_smst_units"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:alpha="0.5"
                            android:background="#F4F4F4"
                            android:hint="@string/_23"
                            android:inputType="numberDecimal"
                            android:maxWidth="56dp"
                            android:maxHeight="48dp"
                            android:maxEms="4"
                            android:maxLength="2"
                            android:maxLines="1"
                            android:padding="12dp"
                            android:textColorHint="@color/toolbar_color"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/topmost2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/topmost1"
                    android:layout_marginTop="0dp"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_bg"
                        android:elevation="2dp"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <TextView
                            android:id="@+id/font_tv2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="Second semester GP"
                            android:textColor="@color/toolbar_color"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0.7dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="0"
                            android:background="@android:color/black" />

                        <EditText
                            android:id="@+id/second_smst_gp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:alpha="0.5"
                            android:background="#FAF4F4"
                            android:hint="5.0"
                            android:inputType="numberDecimal"
                            android:maxWidth="56dp"
                            android:maxHeight="48dp"
                            android:maxEms="3"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:padding="12dp"
                            android:textColorHint="@color/toolbar_color"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_bg"
                        android:elevation="2dp"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="Second semester total unit"
                            android:textColor="@color/toolbar_color"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0.7dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="0"
                            android:background="@android:color/black" />

                        <EditText
                            android:id="@+id/second_smst_units"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:alpha="0.5"
                            android:background="#F4F4F4"
                            android:hint="@string/_23"
                            android:inputType="numberDecimal"
                            android:maxWidth="56dp"
                            android:maxHeight="48dp"
                            android:maxEms="4"
                            android:maxLength="2"
                            android:maxLines="1"
                            android:padding="12dp"
                            android:textColorHint="@color/toolbar_color"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/compute"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/topmost2"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/style_me"
                    android:text="Compute CGPA"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
